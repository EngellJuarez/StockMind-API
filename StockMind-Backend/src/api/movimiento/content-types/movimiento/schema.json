{
  "kind": "collectionType",
  "collectionName": "movimientos",
  "info": {
    "singularName": "movimiento",
    "pluralName": "movimientos",
    "displayName": "Movimiento",
    "description": "Registro de entradas y salidas de inventario"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Tipo": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Entrada",
        "Salida",
        "Ajuste"
      ]
    },
    "Cantidad": {
      "type": "integer",
      "required": true,
      "min": 0
    },
    "Fecha": {
      "type": "datetime",
      "required": true
    },
    "Observaciones": {
      "type": "text"
    },
    "producto": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::producto.producto",
      "inversedBy": "movimientos"
    },
    "almacen": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::almacen.almacen",
      "inversedBy": "movimientos"
    },
    "usuario": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
